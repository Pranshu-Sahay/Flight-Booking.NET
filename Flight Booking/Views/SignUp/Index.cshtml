
@model FlightBooking.Models.FBVM


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/css/signup.css">
</head>
<body>
    <div class="signup-container">
        <h1>Sign Up</h1>
        <form method="POST" class="signup-form" asp-controller="SignUp" asp-action="RegsiteredUser">
            
            <label for="uid">User ID:</label>
            <input type="text" id="uid"  asp-for="FbookingUserPsObj.UserId" required>

            <label for="username">Username:</label>
            <input type="text" id="username" name="username" asp-for="FbookingUserPsObj.Username" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" asp-for="FbookingUserPsObj.Email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" asp-for="FbookingUserPsObj.Password" required>

            <label for="confirm_password">Confirm Password:</label>
            <input type="password" id="confirm_password" name="confirm_password" required>

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone" asp-for="FbookingUserDltsObj.PhoneNo" >
            
            <label for="dob">DOB:</label>
            <input type="date" id="dob" name="dob" asp-for="FbookingUserDltsObj.Dob" >

            

            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a asp-controller="login" asp-action="Index" class="Logbtn">Log In</a></p>
    </div>

    <script src="~/js/signup.js"></script>
</body>
</html>
