@model FlightBooking.Models.FBVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Booking</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>


        /* Reset default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body styles */
    body { 
        font-family: Arial, sans-serif; 
          background-color: #f2f2f2; 
          background-image: url("https://images.unsplash.com/photo-1499346030926-9a72daac6c63?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"); 
          background-size: cover;
          background-position: center; 
    }

        /* Main content styles */
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .credentials-form {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            width: 1000px;
            height: 950px;
            background: transparent;
            color: white;
            font-size: 1.5em;
            backdrop-filter: blur(10px);
        }

            .credentials-form h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .credentials-form input[type="text"],
            .credentials-form input[type="email"],
            .credentials-form input[type="tel"],
            .credentials-form select,
            .credentials-form input[type="date"],
            .credentials-form input[type="submit"] {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ccc;
                border-radius: 32px;
                box-sizing: border-box;
                font-size: 23px;
            }

            .credentials-form input[type="submit"] {
                background-color: #1c9bf1;
                color: #fff;
                border: none;
                cursor: pointer;
            }

                .credentials-form input[type="submit"]:hover {
                    background-color: #555;
                }

            .credentials-form label {
                display: block;
                margin-bottom: 5px;
            }

            .credentials-form .fa {
                margin-right: 5px;
            }

        /* Ticket card styles */
        .ticket-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            display: none;
            width: 410px;
            /* Hide by default */
        }

            .ticket-card h3 {
                margin-bottom: 10px;
                text-align: center;
            }

            .ticket-card h2 {
                margin-bottom: 10px;
                text-align: center;
            }

            .ticket-card p {
                margin-bottom: 5px;
            }

            .ticket-card .ticket-details {
                border-top: 1px solid #ccc;
                margin-top: 10px;
                padding-top: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="credentials-form">
            <h2>Enter Your Credentials to Book Your Flight</h2>
            <form id="bookingForm" asp-controller="Booking" asp-action="doBook">
                <label for="txtFlightId"><i class="fa fa-map-marker-alt"></i> Flight Id:</label>
                <input type="text" id="txtFlightId" asp-for="FbookingBookMstPsObj.FlightId" readonly required>
                <label for="fullname"><i class="fa fa-user"></i> Full Name:</label>
                <input type="text" id="fullname" asp-for="FbookingUserPsObj.Username" required>
                <label for="email"><i class="fa fa-envelope"></i> Email Address:</label>
                <input type="email" id="email" asp-for="FbookingUserDltsObj.Email" required>
                <label for="phone"><i class="fa fa-phone"></i> Phone Number:</label>
                <input type="tel" id="phone" asp-for="FbookingUserDltsObj.PhoneNo" required>
                <label for="destination"><i class="fa fa-map-marker-alt"></i>Departure:</label>
                <input type="text" id="DepartureAp" asp-for="FbookingBookMstPsObj.DepartureAp" readonly required>
                <label for="destination"><i class="fa fa-map-marker-alt"></i>Destination:</label>
                <input type="text" id="DestinationAp" asp-for="FbookingBookMstPsObj.DestinationAp" readonly required>

                <label for="passengers"><i class="fa fa-users"></i> Number of Passengers:</label>
                <input type="number" id="passengers" asp-for="FbookingBookDltsPsObj.Traveller" required>

                <label for"journeyduration">Journey Duration - Hrs</label>
                <input type="number" id="journeyduration" asp-for="FbookingBookMstPsObj.JourneyDuration" required />
               
                <input type="submit" class="btn btn-primary" value="Book Ticket">
            </form>
        </div>
        
</body>
</html>